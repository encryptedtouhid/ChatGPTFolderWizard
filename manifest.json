{
  "manifest_version": 3,
  "name": "ChatGPT Sidebar Organizer",
  "version": "1.0",
  "description": "Organize ChatGPT conversations directly in the ChatGPT sidebar.",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
